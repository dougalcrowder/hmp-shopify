<div class="product_card{% unless product.available %} sold_out{% endunless %}" data-product-id="{{ product.id }}">
  <a href="{{ product.url }}">
    {% include 'product-card-image' %}
    <div class="text">
      <h2 class="h4">{{ product.title }}</h2>
      {% include 'product-price' %}
    </div>
  </a>
</div>
