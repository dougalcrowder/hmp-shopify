<div class="testimonial bg-{{ block.settings.background }} top-{{ block.settings.spacing }} bot-{{ block.settings.spacing_bottom }} text-{{ block.settings.text_align }}">
  <div class="mininner">
      {% if block.settings.text != blank %}
      <div class="rte">
        <blockquote>
          {{ block.settings.text }}
          {% if block.settings.title != blank %}
          <cite>{{ block.settings.title | escape }}</cite>
          {% endif %}
        </blockquote>
      </div>
      {% endif %}
      
      {% if block.settings.button_label != blank and block.settings.button_url != blank %}
      {%- capture ariaLabel -%}
      {{- block.settings.button_label -}}
      {%- if block.settings.button_url.type == 'frontpage_link' -%}
      : {{ 'homepage.general.title' | t -}}
      {%- elsif block.settings.button_url.type == 'catalog_link' -%}
      : {{ 'collections.catalog.title' | t -}}
      {%- elsif block.settings.button_url.object.title -%}
      : {{ block.settings.button_url.object.title -}}
      {%- endif -%}
      {%- endcapture -%}
      
      <div class="cta">
        <a href="{{ block.settings.button_url }}"
        class="button"
        aria-label="{{ ariaLabel }}">
          {{- block.settings.button_label -}}
        </a>
      </div>
    {% endif %}
      
</div>
</div>
