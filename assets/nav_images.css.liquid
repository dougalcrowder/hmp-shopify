{% if settings.menu1 != blank %}
@media screen and (min-width: 960px) {
  .{{settings.menu1}}.hasmega .four_image {
    background: url({{ settings.bg_image1 | img_url: '921x267', crop: 'center', format: 'pjpg' }} ) no-repeat center top;
    background-size: cover;
  }
  .{{settings.menu1}}.hasmega .three_image {
    background: url({{ settings.bg_image1 | img_url: '701x267', crop: 'center', format: 'pjpg' }} ) no-repeat center top;
    background-size: cover;
  }
  .{{settings.menu1}}.hasmega .two_image {
    background: url({{ settings.bg_image1 | img_url: '481x267', crop: 'center', format: 'pjpg' }} ) no-repeat center top;
    background-size: cover;
  }
}
@media screen and (-webkit-min-device-pixel-ratio: 1.5) and (min-width: 960px) {
  .{{settings.menu1}}.hasmega .four_image {
    background: url({{ settings.bg_image1 | img_url: '921x267', crop: 'center', format: 'pjpg', scale: 2 }} ) no-repeat center top;
    background-size: cover;
  }
  .{{settings.menu1}}.hasmega .three_image {
    background: url({{ settings.bg_image1 | img_url: '701x267', crop: 'center', format: 'pjpg', scale: 2 }} ) no-repeat center top;
    background-size: cover;
  }
  .{{settings.menu1}}.hasmega .two_image {
    background: url({{ settings.bg_image1 | img_url: '481x267', crop: 'center', format: 'pjpg', scale: 2 }} ) no-repeat center top;
    background-size: cover;
  }
}
{% endif %}

