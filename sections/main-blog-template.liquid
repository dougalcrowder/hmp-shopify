{% paginate blog.articles by 32 %}

<div class="page-width blog_header">
  <header class="section-header inner">
    <h1>{{ page_title }}</h1>
  </header>
</div>


  <div class="articles">
    <ul class="grid inner">
      
      {% for article in blog.articles %}
      <li class="blog-item">
        {% include 'blog-item' %}
      </li>
      {% endfor %}
     
    </ul>
  </div>



{%- if paginate.pages > 1 -%}
  {% include 'pagination', paginate: paginate %}
{%- endif -%}

{% endpaginate %}



