<div class="mininner featured_collection">
  <div class="flex">
    <div class="text">
      {% if section.settings.title != blank %}
      <h2>{{ section.settings.title | escape }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
      <div class="rte">{{ section.settings.text }}</div>
      {% endif %}
      {% if section.settings.link_label != blank %}
        <a class="button alt" href="{{ section.settings.collection.url }}">{{ section.settings.link_label }}</a>
      {% endif %}
    </div>
    
  
    {%- assign collection = collections[section.settings.collection] -%}
    {%- assign product_limit = section.settings.grid -%}
    <div class="slideshow">
      <div class="carousel product-carousel">
        {% for product in collection.products limit: 6 %}
          {% for image in product.images limit:1 %}
          <picture>
            <source srcset="{{ image.src | img_url: '344x344', crop: 'center', scale: 2 }} 2x, {{ image.src | img_url: '344x344', crop: 'center' }} 1x" media="(min-width: 321px)" />
            <source srcset="{{ image.src | img_url: '300x300', crop: 'center', scale: 2 }} 2x, {{ image.src | img_url: '300x300', crop: 'center' }} 1x" media="(min-width: 200px)" />
            <img loading="lazy" class="lazyloadthisatsomepoint" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" alt="{{ product.featured_image.alt | escape }}" width="344" height="344" />
          </picture>
          {% endfor %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>



