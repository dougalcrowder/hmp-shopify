{{ 'styles-collections.css' | asset_url | stylesheet_tag }}
{% if collection.image != blank %}
<header class="collection-header inner flex">
  <div class="title">
    <h1>{{ collection.title }}</h1>
    <div class="rte">{{ collection.description }}</div>
  </div>
</header>
{% else %}
<h1 class="visibility-hidden">{{ collection.title }}</h1>
{% endif %}
<div id="shopify-section-collection-template">

<div data-section-id="{{ section.id }}" data-section-type="collection-template" class="collectionpage grid inner">
  <div class="filters">
    <aside aria-labelledby="verticalTitle" class="facets-wrapper" id="main-collection-filters" data-id="{{ section.id }}">
  {% render 'facets', results: collection, enable_filtering: true, enable_sorting: true, filter_type: 'vertical' %}
    </aside>
    
  </div>
  <div class="product-grid-container" id="ProductGridContainer">
    {% paginate collection.products by 40 %}
    <div class="collection">
      <div class="collection_grid product-grid" id="product-grid" data-id="{{ section.id }}"> 
        {% for product in collection.products %}
            {% include 'product-card-grid' %}
        {% endfor %}
      </div>
      {%- if paginate.pages > 1 -%}
      {% include 'pagination', paginate: paginate %}
      {%- endif -%}
    {% if collection.products_count == 0 %}
      <div class="nuffin">
        <p class="text-center">{{ 'collections.general.no_matches' | t }}</p>
      </div>
    {% endif %}
    
  </div>
  {% endpaginate %}
</div>




<script src="{{ 'facets.js' | asset_url }}" defer="defer"></script>

</div>
